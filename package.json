{
	"name": "life-tracker-backend",
	"version": "0.0.1",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc --watch",
		"start": "node dist/src/index.js",
		"start:ts": "node --loader ts-node/esm src/index.ts",
		
		"test": "npm run test:fuzz && npm run test:integration",
		"test:integration": "cross-env NODE_ENV=test mocha --extension ts -reporter spec --recursive dist/test/integration/**/*.spec.js",
		"test:fuzz": "cross-env NODE_ENV=test mocha --reporter dot --recursive dist/test/fuzz/**/*.spec.js",
		"test:coverage": "nyc npm run test:integration",

		"build-test:integration": "npm run build && npm run test:integration",
		"build-test:fuzz": "npm run build && npm run test:fuzz",
		"build-test:coverage": "npm run build && npm run test:coverage",

		"lint": "npx eslint **/*.ts",
		"lint:fix": "npx eslint **/*.ts --fix",
		
		"depcheck": "npx depcheck",
		"upgrade-all": "npm update && npx ncu -u && npm install",
				
		"mocha-ts-node": "node --loader ts-node/esm node_modules/mocha/bin/mocha --require ts-node/register -reporter spec --recursive test/integration/**/*.spec.ts"
	},
	"dependencies": {
		"@logtail/node": "^0.4.19",
		"config": "^3.3.11",
		"express": "^4.18.2",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^7.1.5",
		"helmet": "^7.1.0",
		"mongoose": "^8.2.0",
		"nanoid": "^5.0.6",
		"node-vault": "^0.10.2",
		"validator": "^13.11.0",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/chai": "^4.3.12",
		"@types/config": "^3.3.3",
		"@types/express": "^4.17.21",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.20",
		"@types/sinon": "^17.0.3",
		"@types/validator": "^13.11.9",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"chai": "^5.1.0",
		"chai-http": "^4.4.0",
		"cross-env": "^7.0.3",
		"depcheck": "^1.4.7",
		"eslint": "^8.57.0",
		"eslint-config-standard-with-typescript": "^43.0.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-promise": "^6.1.1",
		"mocha": "^10.3.0",
		"mongodb-memory-server": "^9.1.6",
		"npm-check-updates": "^16.14.15",
		"nyc": "^15.1.0",
		"sinon": "^17.0.1",
		"source-map-support": "^0.5.21",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	}
}
